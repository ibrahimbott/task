{
    "version": 2,
    "builds": [
        {
            "src": "frontend-book/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        },
        {
            "src": "backend/rag_system.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/rag_system.py"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend-book/$1"
        }
    ],
    "env": {
        "PYTHON_VERSION": "3.9"
    }
}